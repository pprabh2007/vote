<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/view_complaint_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ViewComplaintActivity"

    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:padding="24dp"

    android:background="#D3D3D3"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        card_view:cardCornerRadius="40dp"
        card_view:contentPaddingLeft="24dp"
        card_view:contentPaddingRight="24dp"
        card_view:contentPaddingBottom="24dp"
        card_view:contentPaddingTop="24dp"

        card_view:cardBackgroundColor="#FFFFFF"
        >
        <ImageView
            android:id="@+id/DetCom_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/close_icon"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                >

                <TextView
                    android:id="@+id/DetCom_title"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/DetCom_description"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="30dp"

                    android:gravity="center"
                    android:text="g elit. Nam quis egestas massa. Quisque feugiat, justo consequat fringilla convallis, velit diam aliquet elit, volutpat tincidunt est augue eu leLorem ipsum dolor sit amet, ciat, justo consequat fringilla  convallis, velit diam aliquet elit, volutpat tincidunt est augue eu lectus. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Etiam tempor odio sit amet mi laoreet maximus. Vivamus eget mauris dui. Curabitur vel libero eget purus porta sagittis quis quis tortor. Nunc ac auctor sapien."
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    android:gravity="center"
                    android:text="More Information"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:textColor="#000000"

                    />

                <TextView

                    android:id="@+id/DetCom_id"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Issue ID:  "
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="#000000"

                    />

                <TextView

                    android:id="@+id/DetCom_date"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Lodged On:  "
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="#000000"

                    />

                <TextView

                    android:id="@+id/DetCom_status"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Status:  "
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    />

                <TextView

                    android:id="@+id/DetCom_upvotes"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Upvotes:  "
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    />


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>