<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"

            android:padding="16dp"
            >


            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:src="@drawable/user"

                />


            <TextView

                android:id="@+id/my_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_photo"

                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"

                android:layout_marginStart="75dp"

                android:layout_marginLeft="75dp"

                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/my_profile_name_edit"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/my_profile_name"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="42dp"

                android:layout_toRightOf="@id/my_profile_name"

                android:padding="8dp"

                android:text="Arnab Maiti"
                android:textColor="#000000"

                android:textSize="22dp" />

            <TextView

                android:id="@+id/my_profile_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_name"

                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"

                android:layout_marginStart="91dp"

                android:layout_marginLeft="91dp"

                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:text="DOB"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/my_profile_dob_edit"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/my_profile_dob"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="42dp"

                android:layout_toRightOf="@id/my_profile_dob"

                android:padding="8dp"
                android:text="28/02/99"
                android:textColor="#000000"

                android:textSize="22dp" />

            <TextView

                android:id="@+id/my_profile_voterid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_dob"

                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"

                android:layout_marginStart="53dp"

                android:layout_marginLeft="53dp"

                android:layout_marginTop="1dp"
                android:padding="8dp"
                android:text="Voter ID"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/my_profile_voterid_edit"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/my_profile_voterid"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="42dp"

                android:layout_toRightOf="@id/my_profile_voterid"

                android:padding="8dp"

                android:text="CS30008"
                android:textColor="#000000"

                android:textSize="22dp" />

            <TextView

                android:id="@+id/my_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_voterid"

                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"

                android:layout_marginStart="36dp"

                android:layout_marginLeft="36dp"

                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView

                android:id="@+id/my_profile_username_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/my_profile_username"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="39dp"

                android:layout_toRightOf="@id/my_profile_username"

                android:padding="2dp"

                android:text="maitiarnab7"
                android:textColor="#000000"

                android:textSize="22dp" />

        </RelativeLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>