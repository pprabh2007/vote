<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        >

        <TextView
            android:id="@+id/constituency_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"

            android:gravity="center"

            android:textColor="#000000"
            android:text="Constituency"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/person_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"

            android:gravity="center"

            android:textColor="#000000"
            android:text="Person"
            android:textSize="20sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:orientation="vertical"

            >
            <com.github.mikephil.charting.charts.PieChart

                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/per_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"

            android:textColor="#000000"
            android:text="Percentage of Complaints Completed: "
            />
        <TextView
            android:id="@+id/per_assigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"

            android:textColor="#000000"
            android:text="Percentage of Complaints Assigned: "
            />
        <TextView
            android:id="@+id/per_launched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"

            android:textColor="#000000"
            android:text="Percentage of Complaints Launched: "
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>