<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/view_complaint_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ViewComplaintActivity"

    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:padding="24dp"

    android:background="#D3D3D3"
    >

    <android.support.v7.widget.CardView
        android:layout_width="386dp"
        android:layout_height="222dp"

        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="40dp"
        card_view:contentPaddingBottom="24dp"
        card_view:contentPaddingLeft="24dp"
        card_view:contentPaddingRight="24dp"

        card_view:contentPaddingTop="24dp">

        <ImageView
            android:id="@+id/DetCom_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/close_icon" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="left"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />


                <TextView

                    android:id="@+id/user_id"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="left"
                    android:text="Voter ID:  "
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal"

                    />

                <TextView

                    android:id="@+id/user_date"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="left"
                    android:text="DOB:  "
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal"

                    />


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>