<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="0dp"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="48dp"

            tools:layout_editor_absoluteX="465dp"
            tools:layout_editor_absoluteY="66dp">


            <TextView
                android:id="@+id/name_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:paddingLeft="4dp"
                android:text="Name"
                android:textColor="#000000"

                android:textSize="16sp"

                />

            <EditText
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/name_input"
                android:inputType="textPersonName"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/name_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="@color/vote_color"
                />

            <LinearLayout
                android:id="@+id/name_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_toRightOf="@id/name_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Invalid Name"

                    />


            </LinearLayout>




            <TextView

                android:id="@+id/email_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/name_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="E-mail ID"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/email_input"
                android:inputType="textEmailAddress"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/email_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="#C63339"

                />
            <LinearLayout
                android:id="@+id/email_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_toRightOf="@id/email_label"
                android:layout_alignBottom="@id/email_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/email_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/email_label"
                android:layout_alignBottom="@id/email_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:id="@+id/email_not_verified_message"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Invalid Email"

                    />


            </LinearLayout>




            <TextView

                android:id="@+id/password_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/email_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="Password"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/password_input"
                android:inputType="textPassword"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/password_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="#C63339"

                />

            <LinearLayout
                android:id="@+id/password_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_toRightOf="@id/password_label"
                android:layout_alignBottom="@id/password_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/password_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password_label"
                android:layout_alignBottom="@id/password_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Password too short!"

                    />


            </LinearLayout>


            <TextView

                android:id="@+id/confirm_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/password_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="Confirm Password"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/confirm_input"
                android:inputType="textPassword"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/confirm_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="#C63339"

                />

            <LinearLayout
                android:id="@+id/confirm_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_toRightOf="@id/confirm_label"
                android:layout_alignBottom="@id/confirm_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/confirm_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/confirm_label"
                android:layout_alignBottom="@id/confirm_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Don't match"

                    />


            </LinearLayout>



            <TextView

                android:id="@+id/voter_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/confirm_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="Voter ID"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/voter_input"
                android:digits="@string/alphanum"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/voter_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="#C63339"

                />

            <LinearLayout
                android:id="@+id/voterid_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_toRightOf="@id/voter_label"
                android:layout_alignBottom="@id/voter_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/voterid_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/voter_label"
                android:layout_alignBottom="@id/voter_label"
                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Invalid Voter ID"

                    />


            </LinearLayout>



            <TextView

                android:id="@+id/dob_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/voter_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="Date of Birth"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/drop_downs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:layout_below="@id/dob_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <Spinner

                    android:id="@+id/dob_y_input"

                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />
                <!--android:layout_below="@id/dob_label"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentLeft="true"-->


                <Spinner

                    android:id="@+id/dob_m_input"

                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"

                    />

                <Spinner

                    android:id="@+id/dob_d_input"

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    />
                <!--android:layout_below="@id/dob_label"-->
                <!--android:layout_toRightOf="@id/dob_y_input"-->
                <!--android:layout_toEndOf="@id/dob_y_input"-->


            </LinearLayout>

            <TextView

                android:id="@+id/sex_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/drop_downs"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:text="Sex"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup

                android:id="@+id/radio"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"

                android:layout_below="@id/sex_label"

                android:orientation="horizontal">

                <RadioButton android:id="@+id/radio_male"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:buttonTint="#C63339"
                    android:checked="true"

                    />
                <RadioButton android:id="@+id/radio_female"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:buttonTint="#C63339"

                    />
                <RadioButton android:id="@+id/radio_other"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:buttonTint="#C63339"

                    />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/category_box"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:orientation="horizontal"

                android:layout_below="@id/radio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/category_label"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Category:"
                    android:textColor="#000000"
                    android:textSize="16sp"

                    />

                <Spinner
                    android:id="@+id/category_input"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/constituency_list_box"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:orientation="horizontal"

                android:layout_below="@id/category_box"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/constituency_list_label"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Constituency:"
                    android:textColor="#000000"
                    android:textSize="16sp"

                    />

                <Spinner
                    android:id="@+id/constituency_list_input"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/constituency_text_box"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"

                android:orientation="vertical"

                android:layout_below="@id/constituency_list_box"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/constituency_text_label"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Constituency:"
                    android:textColor="#000000"
                    android:textSize="16sp"

                    />

                <EditText
                    android:focusableInTouchMode="true"
                    android:focusable="true"

                    android:id="@+id/constituency_text_input"
                    android:inputType="text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#C63339"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/constituency_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_below="@id/constituency_text_box"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"

                android:visibility="visible"
                >
                <ImageView



                    android:src="@drawable/verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#215A21"
                    android:text="Thank You for registering with us!"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/constituency_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/constituency_text_box"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"

                android:visibility="gone"

                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/not_verified"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#FF0000"
                    android:text="Already Exists or Null"

                    />


            </LinearLayout>

            <EditText
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/dummy_input"
                android:digits="@string/alphanum"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/constituency_not_verified"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="#C63339"
                android:visibility="invisible"

                />



            <Button

                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/dummy_input"
                android:layout_centerHorizontal="true"

                android:backgroundTint="#C63339"

                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_marginTop="32dp"

                android:text="Register"
                android:textSize="20sp"
                android:textColor="#FFFFFF"

                />


        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>