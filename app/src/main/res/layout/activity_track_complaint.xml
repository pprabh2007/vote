<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="0dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="48dp"

            tools:layout_editor_absoluteX="465dp"
            tools:layout_editor_absoluteY="66dp">


            <TextView
                android:id="@+id/track_com_title_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Reference No:"
                android:textColor="#000000"

                android:textSize="16sp"

                />

            <EditText

                android:id="@+id/track_com_edit"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_title_label"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:backgroundTint="#C63339"
                android:inputType="text" />





            <Button
                android:id="@+id/track_com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/track_com_edit"
                android:layout_centerHorizontal="true"

                android:backgroundTint="#C63339"

                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_marginTop="16dp"

                android:text="Track"
                android:textSize="20sp"
                android:textColor="#FFFFFF"

                />

            <TextView
                android:id="@+id/track_com_issue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com"
                android:layout_marginTop="63dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Reference No:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/track_com_issue_edit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_issue"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="NA091032"
                android:textColor="#000000"

                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/track_com_title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_issue_edit"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Title:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/track_com_title_edit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_title"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Nothing"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/track_com_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_title_edit"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Date:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/track_com_date_edit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_date"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="19/09/2018"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/track_com_status"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_date_edit"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Status:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/track_com_status_edit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_com_status"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="As Usual (Nothing)"
                android:textColor="#000000"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>